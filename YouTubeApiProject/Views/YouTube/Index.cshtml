@model List<YouTubeApiProject.Models.YouTubeVideoModel>

<h2 class="text-center">Search YouTube Videos</h2>
<form asp-action="Search" method="post" class="search-form">
    <input type="text" name="query" placeholder="Search for videos..." class="form-control" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model != null && Model.Any())
{
    <div class="video-grid">
        @foreach (var video in Model)
        {
            <div class="video-card">
                <div class="video-details">
                    <h3 class="video-title">@video.Title</h3>
                    <img src="@video.ThumbnailUrl" alt="@video.Title" class="thumbnail" />
                    <p class="video-description">@video.Description</p>

                    <div class="watch-button">
                        <a href="@video.VideoUrl" target="_blank">
                            <button class="btn-secondary" type="button">Watch Video</button>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center">No videos found. Try searching for something else.</p>
}

<!-- Styling -->
<style>
    /* Form Styling */
    .search-form {
        margin: 20px auto;
        text-align: center;
    }

        .search-form .form-control {
            width: 70%;
            margin-right: 10px;
            display: inline-block;
        }

        .search-form .btn {
            vertical-align: top;
        }

    /* Grid Layout */
    .video-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }

    /* Video Card */
    .video-card {
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        justify-content: space-between; /* Ensures button stays at the bottom */
        transition: transform 0.2s ease-in-out;
    }

        .video-card:hover {
            transform: scale(1.03);
        }

    .thumbnail {
        width: 100%;
        height: auto;
        border-bottom: 1px solid #ddd;
    }

    /* Video Details */
    .video-details {
        padding: 15px;
        flex-grow: 1;
    }

    .video-title {
        font-size: 1.2em;
        margin: 0 0 10px;
        color: #333;
        font-weight: bold;
    }

    .video-description {
        font-size: 0.9em;
        color: #666;
        margin-bottom: 15px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
    }

    /* Watch Button at Bottom */
    .watch-button {
        text-align: center;
        margin-top: auto; /* Pushes button to the bottom */
    }

    .btn-secondary {
        background-color: #007bff;
        color: white;
        padding: 8px 12px;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #0056b3;
        }
</style>
